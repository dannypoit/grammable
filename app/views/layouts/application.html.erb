<!DOCTYPE html>
<html>
  <head>
    <title>Grammable</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans|Pacifico" rel="stylesheet">
  </head>

  <body>
    <div class="top-nav">
      <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
        <div class="row">
          <div class="brand col-12 col-md-4">
            <%= link_to 'Grammable', root_path %>
          </div>
          <div class="add col-12 col-md-8">
            <% if current_user %>
              Hello, <%= current_user.email %>.
              <%= link_to "New Gram", new_gram_path %>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
            <% else %>
              <%= link_to "Sign In", new_user_session_path %>
              <%= link_to "Sign Up", new_user_registration_path %>
            <% end %>
          </div>
        </div>
      </div>
      <br class="clear-fix" />
    </div>

    <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
      <% if notice.present? %>
        <br />
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <br />
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <div class="clear-fix" /></div>
    </div>

    <%= yield %>
  </body>
</html>
